<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    app:cardBackgroundColor="@color/DarkONP"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/TextOnSecondary"
            android:fontFamily="@font/sans_bold"
            android:layout_gravity="center_horizontal"
            android:text="نام کشور"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_marginTop="8dp"
            android:background="@color/TextOnSecondary"/>

        <!-- NewConfirmed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/bg_conutries_item">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/TextOnSecondary"
                android:text="مبتلایان جدید : "
                android:fontFamily="@font/sans_bold"/>

            <TextView
                android:id="@+id/NewConfirmed"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/TextOnSecondary"
                android:text="137,255"
                android:fontFamily="@font/sans_num_bold"
                android:gravity="left"/>

        </LinearLayout>
        <!-- TotalConfirmed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/bg_conutries_item">

            <TextView
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/TextOnSecondary"
                android:text="کل مبتلایان : "
                android:fontFamily="@font/sans_bold"/>

            <TextView
                android:id="@+id/TotalConfirmed"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/TextOnSecondary"
                android:text="137,255"
                android:fontFamily="@font/sans_num_bold"
                android:gravity="left"/>

        </LinearLayout>
        <!-- NewDeath -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/bg_conutries_item">

            <TextView
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/TextOnSecondary"
                android:text="فوت شدگان جدید : "
                android:fontFamily="@font/sans_bold"/>

            <TextView
                android:id="@+id/NewDeaths"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/TextOnSecondary"
                android:text="137,255"
                android:fontFamily="@font/sans_num_bold"
                android:gravity="left"/>

        </LinearLayout>
        <!-- TotalDeath -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/bg_conutries_item">

            <TextView
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/TextOnSecondary"
                android:text="کل فوت شدگان : "
                android:fontFamily="@font/sans_bold"/>

            <TextView
                android:id="@+id/TotalDeaths"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/TextOnSecondary"
                android:text="137,255"
                android:fontFamily="@font/sans_num_bold"
                android:gravity="left"/>

        </LinearLayout>
        <!-- TotalRecovered -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/bg_conutries_item">

            <TextView
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/TextOnSecondary"
                android:text="کل بهبود یافتگان :"
                android:fontFamily="@font/sans_bold"/>

            <TextView
                android:id="@+id/TotalRecovered"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/TextOnSecondary"
                android:text="137,255"
                android:fontFamily="@font/sans_num_bold"
                android:gravity="left"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>